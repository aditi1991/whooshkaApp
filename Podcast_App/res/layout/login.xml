<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_btn_margin_top"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="@dimen/agis_logo_width"
        android:layout_height="@dimen/menu_title_height"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/slider_img_width"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:hint="Email/User Name" >
    </EditText>

    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="@dimen/agis_logo_width"
        android:layout_height="@dimen/menu_title_height"
        android:layout_below="@+id/emailEt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lib_padding_left"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="@dimen/agis_logo_height"
        android:layout_height="@dimen/header_search_icon_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ADD8E6"
        android:text="Submit"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/forgetPwdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/submitBtn"
        android:layout_below="@+id/submitBtn"
        android:layout_marginTop="@dimen/lib_view_margin_top"
        android:text="Forgot Your Password?"
        android:textColor="@android:color/white"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgetPwdTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/header_search_icon_height"
        android:layout_marginRight="@dimen/header_search_icon_height"
        android:layout_marginTop="@dimen/lib_view_margin_right"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="@android:color/white"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="or"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="@android:color/white"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/fbLoginBtn"
        android:layout_width="@dimen/agis_logo_height"
        android:layout_height="@dimen/header_search_icon_height"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lib_margin_left"
        android:src="@drawable/fb_login_btn" />

    <ImageView
        android:id="@+id/gpLoginBtn"
        android:layout_width="@dimen/agis_logo_height"
        android:layout_height="@dimen/header_search_icon_height"
        android:layout_below="@+id/fbLoginBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lib_view_margin_right"
        android:src="@drawable/gp_login_btn" />

    <TextView
        android:id="@+id/backTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/lib_view_margin_right"
        android:layout_marginBottom="@dimen/lib_view_margin_right"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic"
        android:text="Back" />

</RelativeLayout>